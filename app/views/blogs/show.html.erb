<% provide :title, @blog.title %>
<body>

  <!-- Navigation -->
<%= render "nav" %>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url(<%= image_url 'home_bg.jpg' %>)">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= @blog.title %></h1>
            <span class="meta"><%= @blog.created_at.strftime("%Y年%m月%d日") %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Flash Message -->
  <%= render "flash" %>

  <!-- Post Content -->
  <article>
    <div class="container">
  <!-- 権限ある人だけに表示 -->
      <% if can? :manage, current_user %>
        <div class="row justify-content-end">
          <%= link_to "編集", edit_blog_path(@blog), class: "btn btn-light" %>
          <%= link_to "削除", blog_path(@blog),method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: "btn btn-light" %>
        </div>
      <% end %>

      <div class="row">
        <%= @blog.content.html_safe %>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <ul class="list-inline text-center">
            <li class="list-inline-item">
              <a href="#">
                <span class="fa-stack fa-lg">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="#">
                <span class="fa-stack fa-lg">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="#">
                <span class="fa-stack fa-lg">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
          </ul>
          <p class="copyright text-muted">Copyright &copy; Your Website 2018</p>
        </div>
      </div>
    </div>
  </footer>

</body>
